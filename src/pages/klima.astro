---
import MainLayout from "../layouts/MainLayout.astro";
import Header from "../components/Header.astro";
import Burger from "../components/Burger.astro";
import Button from '../components/Button.astro';
import Footer from "../components/Footer.astro";
import Nyhedsbrev from "../components/Nyhedsbrev.astro";
---


<MainLayout title="Titel">

  <!-- KLIMA HERO -->
	<section class="relative bg-dark-green min-h-125 lg:min-h-162.5 flex items-center">
    <img src="/klima.jpg" alt="klima" class="w-full h-full object-cover z-0" style="object-position: top;" />
    <img src="/heroshade_blue.png" alt="klima" class="absolute top-1/4 left-0 w-full h-48 lg:h-72 z-10 pointer-events-none -translate-y-1/4" style="object-fit:cover;" />
    <div class="absolute top-1/4 left-0 w-full flex flex-col items-start justify-center z-20 -translate-y-1/4 pl-8" style="height:8rem; /* h-32 */ @media (min-width:1024px){height:10rem;} /* lg:h-40 */">
      <div class="w-full flex flex-col justify-center h-full items-start">
        <h1 class="text-1xl lg:text-[50px] uppercase font-bold elementmedanimation3 mb-2 text-white text-left relative z-30 leading-tight mt-14"> Hvad ved du om klimaet ? </h1>
      </div>
    </div>
  </section>


	
</MainLayout>